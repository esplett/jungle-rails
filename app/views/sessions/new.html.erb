
<header class="page-header">
<h1>Login</h1>
</header>

<%= form_tag 'login' do %>

<table class="table table-bordered">
    <thead>    
    </thead>
        <tbody>
            <tr>
                <td>Email:</td><td><%= text_field_tag :email %></td>
            </tr>
                <td>Password:</td><td><%= password_field_tag :password %></td>
        </tbody>
</table>

<%= submit_tag "Submit" %>

<% end %>
